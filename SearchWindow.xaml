<Window x:Class="CardSearcher.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:CardSearcher"
        mc:Ignorable="d" 
        Title="Card Searcher" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.14*" />
            <!-- 15% for the TextBox -->
            <RowDefinition Height="0.85*" />
            <!-- 85% for the ListView -->
        </Grid.RowDefinitions>

        <!-- Search Box -->
        <TextBox x:Name="InputBox" Margin="10" Width="Auto" FontSize="24" />
        <!-- 设置字体大小为16 -->

        <!-- ListView for Search Results -->
        <ListView x:Name="ResultsListView" Grid.Row="1" Margin="10" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{Binding ImageSource}" Width="50" Height="50" Margin="0,0,10,0" />
                        <TextBlock Text="{Binding DisplayText}" VerticalAlignment="Center" FontSize="14" />
                        <!-- 设置列表项字体大小 -->
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>